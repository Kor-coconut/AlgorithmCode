{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Go)launch",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}"
        },


        
        {
            "name": "(gdb) Launch",
            "type": "cppdbg", 
            "request": "launch", 
            // // 이 밑 부분 파일경로, 파일명을 맞게 고쳐야합니다! 
            "program": "${workspaceFolder}/hello.exe", 
            "args": [], 
            "stopAtEntry": false, 
            "cwd": "${workspaceFolder}", 
            "environment": [], 
            "externalConsole": true, 
            "MIMode": "gdb", 
            // // MinGW 경로가 같은지 확인 ! 
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe", 
            "setupCommands": [ 
                { 
                    "description": "Enable pretty-printing for gdb", 
                    "text": "-enable-pretty-printing", 
                    "ignoreFailures": true 
                } 
            ] 
        } 
    ] 
}